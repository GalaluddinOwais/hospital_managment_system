<odoo>
    <!-- List View  -->
    <record id="view_department_list" model="ir.ui.view">
        <field name="name">hms.department.list</field>
        <field name="model">hms.department</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="capacity"/>
                <field name="is_opened"/>
            </list>
        </field>
    </record>

    <!-- Form View  -->
    <record id="view_department_form" model="ir.ui.view">
        <field name="name">hms.department.form</field>
        <field name="model">hms.department</field>
        <field name="type">form</field>  
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="capacity"/>
                        <field name="is_opened"/>
                        <field name="patient_ids"/>
                        <field name="doctor_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action  -->
    <record id="action_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hms.department</field>
        <field name="view_mode">list,form</field> 

    </record>

    <!-- Menu  -->
    <menuitem id="menu_department"
              name="Departments"
              parent="hms_root_menu"
              action="action_department"/>
</odoo>