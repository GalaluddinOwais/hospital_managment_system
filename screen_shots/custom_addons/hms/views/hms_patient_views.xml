<odoo>
    <!-- List View  -->
    <record id="view_patient_list" model="ir.ui.view">
        <field name="name">hms.patient.list</field>
        <field name="model">hms.patient</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="age"/> 
				<field name="state"/>

                <field name="department_id"/>
            </list>
        </field>
    </record>

    <!-- Form View  -->
	<record id="view_patient_form" model="ir.ui.view">
		<field name="name">hms.patient.form</field>
		<field name="model">hms.patient</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group string="Personal Info">
						<field name="first_name" required="1"/>
						<field name="last_name" required="1"/>
						<field name="email" required="1"/>
						<field name="birth_date"/>
						<field name="age"/>
					</group>						
					<group string="Mdeical Info">
						<field name="history" invisible="age &lt; 50"/>
						<field name="cr_ratio" invisible="not pcr" />
						<field name="blood_type"/>
						<field name="pcr" />
						<field name="image"/>
						<field name="address"/>
						<field name="state" />
					</group>						
					<group string="Department Info" >
						<field name="department_id" domain="[('is_opened', '=', True)]"/> 
						<field name="department_capacity" />
						<field name="doctor_ids" 
							   widget="many2many_tags"
							   domain="[('department_ids', '=', department_id)]"
							   readonly="not department_id"
							   groups="hms.manager_group"/>

					</group>
					<notebook>
						<page string="Log History">
							<field name="log_ids">
								<list>
									<field name="create_date"/>
									<field name="create_uid"/>
									<field name="description"/>
								</list>
							</field>
						</page>
					</notebook>

				</sheet>
			</form>
		</field>
	</record>

    <!-- Action  -->
    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">list,form</field> 

    </record>

    <!-- Menu  -->
    <menuitem id="menu_patient"
              name="Patients"
              parent="hms_root_menu"
              action="action_patient"/>
</odoo>