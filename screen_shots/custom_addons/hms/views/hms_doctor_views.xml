<odoo>
    <!-- List View  -->
    <record id="view_doctor_list" model="ir.ui.view">
        <field name="name">hms.doctor.list</field>
        <field name="model">hms.doctor</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="department_ids" />
            </list>
        </field>
    </record>

    <!-- Form View ) -->
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">hms.doctor.form</field>
        <field name="model">hms.doctor</field>
        <field name="type">form</field>  
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="image"/>
                        <field name="department_ids" />
						<field name="patient_ids" />

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action  -->
    <record id="action_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hms.doctor</field>
        <field name="view_mode">list,form</field>  

    </record>

    <!-- Menu  -->
    <menuitem id="menu_doctor"
              name="Doctors"
              parent="hms_root_menu"
              action="action_doctor"
              groups="hms.manager_group"/>

</odoo>