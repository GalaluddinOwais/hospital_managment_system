<odoo>

<!-- cat -->
  <record id="hms_category" model="ir.module.category">
    <field name="name">HMS</field>
  </record>

<!-- groups -->
  <record id="user_group" model="res.groups">
    <field name="name">HMS User</field>
    <field name="category_id" ref="hms_category"/>
  </record>

  <record id="manager_group" model="res.groups">
    <field name="name">HMS Manager</field>
    <field name="category_id" ref="hms_category"/>
  </record>
  
<!-- record rules -->
<record id="patient_user_rule" model="ir.rule">
  <field name="name">Own Patients Access</field>
  <field name="model_id" ref="model_hms_patient"/>
  <field name="groups" eval="[(4, ref('hms.user_group'))]"/>
  <field name="domain_force">[('create_uid', '=', user.id)]</field>
  <field name="perm_read" eval="1"/>
  <field name="perm_write" eval="1"/>
  <field name="perm_create" eval="1"/>
  <field name="perm_unlink" eval="0"/>
</record>



</odoo>
