<odoo>
  <template id="hms_patient_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="doc">
        <t t-call="web.basic_layout">
          <div class="page" style="text-align: center;">
            <h1>Patient Report</h1>
            

            <!-- Quick Overview -->
            <table style="width: 100%; margin: 20px auto; border-collapse: collapse;">
              <tr>
                <td style="padding: 8px; border: 1px solid #ddd; text-align: center;"><strong>Name:</strong> <span t-esc="doc.name or 'N/A'"/></td>
                <td style="padding: 8px; border: 1px solid #ddd; text-align: center;"><strong>Birth Date:</strong> <span t-esc="doc.birth_date or 'N/A'"/></td>
                <td style="padding: 8px; border: 1px solid #ddd; text-align: center;"><strong>Age:</strong> <span t-esc="doc.age or 'N/A'"/></td>
              </tr>
            </table>

            <!-- More Info -->
            <table style="width: 100%; margin: 20px auto; border-collapse: collapse;">
              <tr>
                <th style="padding: 8px; border: 1px solid #ddd; text-align: center;">Department</th>
                <td style="padding: 8px; border: 1px solid #ddd; text-align: center;"><span t-esc="doc.department_id.name or 'N/A'"/></td>
              </tr>
              <tr>
                <th style="padding: 8px; border: 1px solid #ddd; text-align: center;">Doctors</th>
                <td style="padding: 8px; border: 1px solid #ddd; text-align: center;">
                  <t t-if="doc.doctor_ids">
                    <span t-out="', '.join(doctor.name for doctor in doc.doctor_ids if doctor.name)"/>
                  </t>
                  <t t-else="">N/A</t>
                </td>
              </tr>
              <tr>
                <th style="padding: 8px; border: 1px solid #ddd; text-align: center;">PCR</th>
                <td style="padding: 8px; border: 1px solid #ddd; text-align: center;"><span t-esc="doc.pcr and 'Yes' or 'No'"/></td>
              </tr>
              <tr>
                <th style="padding: 8px; border: 1px solid #ddd; text-align: center;">Blood Type</th>
                <td style="padding: 8px; border: 1px solid #ddd; text-align: center;"><span t-esc="doc.blood_type or 'N/A'"/></td>
              </tr>
              <tr>
                <th style="padding: 8px; border: 1px solid #ddd; text-align: center;">Email</th>
                <td style="padding: 8px; border: 1px solid #ddd; text-align: center;"><span t-esc="doc.email or 'N/A'"/></td>
              </tr>
            </table>

            <!-- Logs -->
            <h2>Log History</h2>
            <table style="width: 100%; margin: 20px auto; border-collapse: collapse;">
              <thead>
                <tr>
                  <th style="padding: 8px; border: 1px solid #ddd; text-align: center;">User</th>
                  <th style="padding: 8px; border: 1px solid #ddd; text-align: center;">Date</th>
                  <th style="padding: 8px; border: 1px solid #ddd; text-align: center;">Description</th>
                </tr>
              </thead>
              <tbody>
                <t t-if="doc.log_ids">
                  <t t-foreach="doc.log_ids" t-as="log">
                    <tr>
                      <td style="padding: 8px; border: 1px solid #ddd; text-align: center;"><span t-esc="log.create_uid.name or 'N/A'"/></td>
                      <td style="padding: 8px; border: 1px solid #ddd; text-align: center;"><span t-esc="log.create_date or 'N/A'"/></td>
                      <td style="padding: 8px; border: 1px solid #ddd; text-align: center;"><span t-esc="log.description or 'N/A'"/></td>
                    </tr>
                  </t>
                </t>
                <t t-else="">
                  <tr>
                    <td colspan="3" style="padding: 8px; border: 1px solid #ddd; text-align: center;">No logs available</td>
                  </tr>
                </t>
              </tbody>
            </table>
          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>